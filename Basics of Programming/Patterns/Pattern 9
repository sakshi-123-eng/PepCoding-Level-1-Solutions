Question:-
https://www.pepcoding.com/resources/online-java-foundation/patterns/design-pattern-9-official/ojquestion

Code:-

#include<iostream>
using namespace std;
int main(){
	int n;
	cin>>n;
	for(int i=1;i<=n;i++){
		for(int j=1;j<=n;j++){
			if(i==j){
				cout<<"*"<<"	";
			}
			else if(i!=j && (i+j)==n+1){
				cout<<"*"<<"	";
			}
			else{
				cout<<"	";
			}
		}
		cout<<"\n";
	}
	return 0;
}
