Code:-

#include<bits/stdc++.h>
using namespace std;

int main(){
	int n,b,s=0,rev=0,c=0;
	cin>>n;
	cin>>b;
	if(b>=2 && b<=10){
		while(n){
		int r=n%b;
		s=s*10+r;
		n=n/b;
		c++;
		
	}
}
while(s){
	int r=s%10;
	rev=rev*10+r;
	s=s/10;
	c--;
}
if(c==0){
	cout<<rev;
}
else{
	cout<<rev;
	while(c){
		cout<<"0";
		c--;
	}
}
	
	return 0;
}
